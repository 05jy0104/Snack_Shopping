<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.snack.mapper.CartMapper">
    <resultMap id="BaseResultMap" type="com.snack.entity.Cart">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="snack_id" property="snackId"/>
        <result column="snack_name" property="snackName"/>
        <result column="price" property="price"/>
        <result column="image" property="image"/>
        <result column="quantity" property="quantity"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="findByUserId" resultMap="BaseResultMap">
        SELECT * FROM cart WHERE user_id = #{userId}
    </select>

    <select id="findByUserIdAndSnackId" resultMap="BaseResultMap">
        SELECT * FROM cart WHERE user_id = #{userId} AND snack_id = #{snackId}
    </select>

    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM cart WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.snack.entity.Cart" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO cart (user_id, snack_id, snack_name, price, image, quantity, create_time)
        VALUES (#{userId}, #{snackId}, #{snackName}, #{price}, #{image}, #{quantity}, #{createTime})
    </insert>

    <update id="update" parameterType="com.snack.entity.Cart">
        UPDATE cart SET quantity = #{quantity} WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM cart WHERE id = #{id}
    </delete>

    <delete id="deleteByUserId">
        DELETE FROM cart WHERE user_id = #{userId}
    </delete>
</mapper>
