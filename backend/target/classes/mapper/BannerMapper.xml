<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.snack.mapper.BannerMapper">
    <resultMap id="BaseResultMap" type="com.snack.entity.Banner">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="image" property="image"/>
        <result column="link" property="link"/>
        <result column="sort" property="sort"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM banner ORDER BY sort ASC, create_time DESC
    </select>

    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM banner WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.snack.entity.Banner" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO banner (title, image, link, sort, create_time)
        VALUES (#{title}, #{image}, #{link}, #{sort}, #{createTime})
    </insert>

    <update id="update" parameterType="com.snack.entity.Banner">
        UPDATE banner
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="image != null">image = #{image},</if>
            <if test="link != null">link = #{link},</if>
            <if test="sort != null">sort = #{sort},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM banner WHERE id = #{id}
    </delete>
</mapper>
