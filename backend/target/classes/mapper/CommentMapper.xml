<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.snack.mapper.CommentMapper">
    <resultMap id="BaseResultMap" type="com.snack.entity.Comment">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="snack_id" property="snackId"/>
        <result column="snack_name" property="snackName"/>
        <result column="content" property="content"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="findBySnackId" resultMap="BaseResultMap">
        SELECT * FROM comment WHERE snack_id = #{snackId} ORDER BY create_time DESC
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM comment ORDER BY create_time DESC
    </select>

    <insert id="insert" parameterType="com.snack.entity.Comment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO comment (user_id, username, snack_id, snack_name, content, create_time)
        VALUES (#{userId}, #{username}, #{snackId}, #{snackName}, #{content}, #{createTime})
    </insert>

    <delete id="delete">
        DELETE FROM comment WHERE id = #{id}
    </delete>
</mapper>
