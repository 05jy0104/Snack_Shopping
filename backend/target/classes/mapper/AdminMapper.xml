<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.snack.mapper.AdminMapper">
    <resultMap id="BaseResultMap" type="com.snack.entity.Admin">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="real_name" property="realName"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="findByUsername" resultMap="BaseResultMap">
        SELECT * FROM admin WHERE username = #{username}
    </select>

    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM admin WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM admin ORDER BY create_time DESC
    </select>

    <update id="update" parameterType="com.snack.entity.Admin">
        UPDATE admin
        <set>
            <if test="password != null">password = #{password},</if>
            <if test="realName != null">real_name = #{realName},</if>
        </set>
        WHERE id = #{id}
    </update>

    <insert id="insert" parameterType="com.snack.entity.Admin" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO admin (username, password, real_name, create_time)
        VALUES (#{username}, #{password}, #{realName}, #{createTime})
    </insert>

    <delete id="delete">
        DELETE FROM admin WHERE id = #{id}
    </delete>
</mapper>
