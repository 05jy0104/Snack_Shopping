<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.snack.mapper.CategoryMapper">
    <resultMap id="BaseResultMap" type="com.snack.entity.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM category ORDER BY create_time DESC
    </select>

    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM category WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.snack.entity.Category" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO category (name, description, create_time)
        VALUES (#{name}, #{description}, #{createTime})
    </insert>

    <update id="update" parameterType="com.snack.entity.Category">
        UPDATE category
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM category WHERE id = #{id}
    </delete>
</mapper>
